<!DOCTYPE html>
<html data-ng-app="app">
<head>
    <title>Home</title>

</head>
<body>
    <div data-ng-controller="productController">

        <div class="btn-group" role="group" data-ng-repeat="c in categories" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default"
                        data-ng-class="{'active': $index == toggleObject.item,'' : $index != toggleObject.item}"
                        data-ng-click="toggleObject.item = $index; GetProductByCategory(c.Id)">
                    <span data-ng-bind="c.Name"></span>
                </button>
            </div>
        </div>

        <br /><br />

        <label for="search">Filter: </label>
        <input id="search" type="text" placeholder="Filter" data-ng-model="filterProduct" />

        <br />

        <table id="tableProduct">
            <thead>
                <tr>
                    <th style="cursor: pointer" data-ng-click="Sort('Name')">Name</th>
                    <th style="cursor: pointer" data-ng-click="Sort('Description')">Description</th>
                    <th style="cursor: pointer" data-ng-click="Sort('Price')">Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr data-ng-repeat="p in products | orderBy: tempOrder | filter:filterProduct">
                    <td><span data-ng-bind="p.Name | uppercase"></span></td>
                    <td><span data-ng-bind="p.Description"></span></td>
                    <td><span data-ng-bind="p.Price | currency"></span></td>
                    <td><button data-ng-click="Edit(p)">Edit</button><button data-ng-click="Delete(p)">Delete</button></td>
                </tr>
            </tbody>
        </table>

        <br />
        <button data-ng-click="Add()">Add Product</button>

        <br /><br /><br />

        <h1>Product details</h1>

        <label for="productName">Product Name: </label>
        <input id="productName" type="text" placeholder="Product Name" data-ng-model="productDetails.Name" /> <br />

        <label for="description">Description: </label>
        <input id="description" type="text" placeholder="Description" data-ng-model="productDetails.Description" /> <br />

        <label for="price">Price: </label>
        <input id="price" type="text" placeholder="Price" data-ng-model="productDetails.Price" />

        <br /> <br/>
        <button data-ng-click="AutoFill()">Auto fill description</button>
        <br /> <br/>
        <button data-ng-click="Save()">Save changes</button>
    </div>
    <script src="~/Scripts/angular.min.js" type="text/javascript"></script>
    <script src="~/Scripts/app/app.js" type="text/javascript"></script>
    <script src="~/Scripts/app/AngularJSExercise/ProductController.js" type="text/javascript"></script>
    <script src="~/Scripts/app/MyServices.js" type="text/javascript"></script>
</body>
</html>